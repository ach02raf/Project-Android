<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        android:text="Categorey  Title" />

    <EditText
        android:id="@+id/editTextBlogTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"

        android:layout_marginTop="54dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Enter the category here"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="109dp"
        android:text="Chose icon " />

    <Button
        android:id="@+id/btnSelectImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_background_cancal"
        android:text="Select Icon"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="133dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/btnSelectImg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/btn_background"
        android:text="Save"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="125dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/btnSelectImg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background_cancal"
        android:text="Cancel"
        app:backgroundTint="@null" />

</RelativeLayout>